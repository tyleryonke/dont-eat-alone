<!-- body content -->
    <div id="confirm-banner" class="banner pad-top-45 pad-bottom-45 pad-top-60-m pad-bottom-60-m">
        <div class="container text-center pad-top-20-m pad-bottom-20-m pad-top-55-l pad-bottom-55-l">
            <!-- SUB HEADERS -->
            <h2 id="find-welcome" class="banner-heading">
            	Before we continue...
            	<!-- dynamically generate "Welcome, [name]" on the DOM here -->
            </h2>

        </div>
    </div> <!--welcome section-->

    <div class="grey-row pad-top-60 pad-bottom-60">
    <div class="register-block pad-top-20 pad-bottom-20 container text-center">
      <h2 id="confirm-h2" class="uppercase pad-bottom-10">Please tell us more about you</h2>
      <div class="col-10-m no-float-m col-8-l no-float-l center">
        <p class="fs-4">
          We want to make sure your information is the most up-to-date so you can find a friend faster
        </p>
      </div>
      <div class="register-form col-10-l col-8-xl no-float center">
        <a class="event-speaker" href="#">
            <img class="block" src={{user.photolink}}>
        </a>
        <form method="post" action="/confirmuser">
	        <div class="confirm-form-list">Name
						<input name="name" type="text" class="validate" value={{user.displayname}}>
	        </div>

	        <div class="confirm-form-list">Age
	        	<input name="age" type="text" class="validate" value={{user.age}}>
	        </div>
	        <div class="confirm-form-list">Occupation
						<input name="occupation" type="text" class="validate" value={{user.occupation}}>
	        </div>
	        <div class="confirm-form-list">Link to profile image
						<input name="photo" type="text" class="validate" value={{user.photolink}}>
	        </div>
	        <div class="confirm-form-list"> Are you a vegetarian?
	              <label for="veg" class="sr">Vegetarian?</label>
	              <span class="select center">
	                <select name="veg" id="veg" class="center">
	                  <option value=true>Yes</option>
	                  <option value=false>No</option>
	                </select>
	              </span>
	        </div>

	        <div class="confirm-form-list"> Will you eat with someone who has a different diet?
	        	<label for="diet" class="sr">Different diet?</label>
	              <span class="select center">
	                <select name="diet" id="diet" class="center">
	                  <option value=true selected="selected">Yes</option>
	                  <option value=yes>No</option>
	                </select>
	              </span>

	        </div>
	        <div class="confirm-form-list input-field">
	        	Favorite food?
	          	<input name="favfood" type="text" class="validate" value={{user.favFood}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	Least favorite food?
	          	<input name="leastfood" type="text" class="validate" value={{user.leastFood}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	Favorite drink?
	          	<input name="favdrink" type="text" class="validate" value={{user.favDrink}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	Least favorite drink?
	          	<input name="leastdrink" type="text" class="validate" value={{user.leastDrink}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	What do you like to do in your free time?
	          	<input name="freetime" type="text" class="validate" value={{user.freeTime}}>
	        </div>
	        <div class="confirm-form-list">
	        	I can eat with someone for <div class="input-field inline">
            		<input name="minavail" type="number" class="validate" value={{user.minAvail}}>
          			</div> minutes today.
	        </div>
          <div class="confirm-form-list input-field">
	        	What restaurant are you dining at now?
	          	<input name="locationname" type="text" class="validate" value={{user.locationName}}>
	        </div>

          <button type="submit">Submit</button>

        </form>

    </div>
  	</div>
